@model Labores.Entities.Labor

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Labor</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Título)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Título)
            @Html.ValidationMessageFor(model => model.Título)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Instrucciones)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Instrucciones)
            @Html.ValidationMessageFor(model => model.Instrucciones)
        </div>
                   <div class="editor-label">
            @Html.LabelFor(model => model.Materiales)
        </div>
          @Html.EditorFor(model => model.Materiales)
        <div class="editor-field">
             <div id="nuevosMateriales"></div>   
                  <input id="addMaterial" type="button" value="AñadirMaterial" />
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $("#addMaterial").on('click', function () {
  

        $.ajax({
            async: false,
            url: '/Home/AñadirMaterial'
        }).success(function (partialView) {

            $('#nuevosMateriales').append(partialView);

        });
    });

</script>
}
